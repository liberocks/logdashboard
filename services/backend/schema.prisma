generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = "5"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Log {
  id        String   @id @db.Uuid
  severity  String
  message   String
  source    String
  timestamp DateTime @default(now())

  @@index([severity])
  @@index([timestamp])
  @@index([source])
  @@map("logs")
}
