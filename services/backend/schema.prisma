// Prisma schema file for Log Dashboard

generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = 5
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Log {
  id        String   @id @default(uuid())
  severity  String
  message   String
  source    String
  metadata  Json?
  timestamp DateTime @default(now())

  @@index([severity])
  @@index([timestamp])
  @@index([source])
  @@map("logs")
}
